
public class AccountNumber extends Account {
	static int AccountNum;
	public static int next(int a) {
		if(a==1) {
			
			AccountNum();
		}
		
		
		
		return a;
	}
	
	
	public static void AccountNum(){
		double a;
		a = (Math.random()*900)+1000;
		System.out.println("あなたのアカウント番号は");
		System.out.println((int)a);
		
		setAccountNum((int)a);
		//setter
		System.out.println("あなたのお名前は？");
		String s=new java.util.Scanner(System.in).nextLine();
		AccountName.setName(s);
	}


	public static int getAccountNum() {
		return AccountNum;
	}


	public static void setAccountNum(int accountNum) {
		AccountNum = accountNum;
	}

	
	
	

}
